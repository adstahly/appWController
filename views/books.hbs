<h1>Books</h1>

<p><a href="/books/new">Add New Book</a></p>
<form action="/books" method="GET">
    <input type="hidden" name="sort" value="pages">
    <button type="submit" class="btn primary">Sort by Pages (Ascending)</button>
</form>


{{#if books.length}}
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Pages</th>
            <th>ISBN</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#each books}}
            <tr>
                <td><a href="/books/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{pages}}</td>
                <td>{{isbn}}</td>
                <td>
                    <a href="/books/{{id}}/edit">Edit</a>
                    |
                    <form action="/books/{{id}}?_method=DELETE" method="POST" style="display:inline"
                                         onsubmit="return confirm('Delete this book?');">
                        <button type="submit" class="btn">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No books yet.</p>
{{/if}}
